$C = "../Common.ui";

// Main container
Group {
  Anchor: (Width: 400, Height: 280);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 20);

  // Title
  Label {
    Text: "ML_Echoes Menu";
    Anchor: (Height: 40);
    Style: (FontSize: 24, TextColor: #ffffff, HorizontalAlignment: Center, RenderBold: true);
  }

  // Separator
  Group { Anchor: (Height: 1); Background: #2b3542; }
  Group { Anchor: (Height: 16); }

  // Status text
  Label #StatusText {
    Text: "Welcome to ML_Echoes!";
    Anchor: (Height: 22);
    Style: (FontSize: 16, TextColor: #96a9be, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 8); }

  // Info section
  Label #VersionText {
    Text: "Version: 1.0.0 | By MicahsLife";
    Anchor: (Height: 18);
    Style: (FontSize: 14, TextColor: #6e7da1, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 16); }

  // Can craft wand
  $C.@CheckBoxWithLabel #CanCraft {
    @Text = %server.customUI.plugin.canCraft;
    @Checked = true;
    LayoutMode: CenterMiddle;
    Anchor: (Width: 300);
    TooltipText: %server.customUI.plugin.canCraftTT;
    Background: #000000(0);
    Padding: (Full: 5);
  }

  Group { Anchor: (Height: 16); }

  // Buttons row
  Group {
    LayoutMode: Center;
    Anchor: (Height: 50);

    TextButton #AcceptButton {
      Text: %server.customUI.plugin.accept;
      Anchor: (Width: 150, Height: 44);
      Style: $C.@DefaultTextButtonStyle;
    }

    Group { Anchor: (Width: 16); }

    TextButton #CancelButton {
      Text: %server.customUI.plugin.cancel;
      Anchor: (Width: 150, Height: 44);
      Style: $C.@CancelTextButtonStyle;
    }
  }

  // Footer
  Group { Anchor: (Height: 8); }
  Label {
    Text: %server.customUI.plugin.esc;
    Anchor: (Height: 16);
    Style: (FontSize: 11, TextColor: #555555, HorizontalAlignment: Center);
  }
}
